<script>
  // Contact form handling
  document.getElementById('contact-form').addEventListener('submit', async function(e) {
    e.preventDefault();

    const formMessage = document.getElementById('form-message');
    const submitBtn = e.target.querySelector('button[type="submit"]');
    const originalBtnText = submitBtn.textContent;

    submitBtn.disabled = true;
    submitBtn.textContent = 'Invio in corso...';

    // Get form data
    const formData = new FormData(e.target);
    const data = Object.fromEntries(formData);

    // TODO: Replace with actual form handling service (Formspree, etc.)
    // For now, simulate submission
    try {
      // Simulated delay
      await new Promise(resolve => setTimeout(resolve, 1000));

      // Show success message
      formMessage.className = 'p-4 rounded-lg bg-green-100 text-green-800';
      formMessage.textContent = 'Messaggio inviato con successo! Ti risponderemo al più presto.';
      formMessage.classList.remove('hidden');

      // Reset form
      e.target.reset();

    } catch (error) {
      // Show error message
      formMessage.className = 'p-4 rounded-lg bg-red-100 text-red-800';
      formMessage.textContent = 'Errore nell\'invio del messaggio. Riprova o contattaci via email.';
      formMessage.classList.remove('hidden');
    }

    submitBtn.disabled = false;
    submitBtn.textContent = originalBtnText;
  });
</script>
