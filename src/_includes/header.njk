        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    {# Mobile Menu #}
    <div id="mobile-menu" class="hidden md:hidden pt-4 pb-2">
      {% for item in navigation[lang] %}
      <a href="{{ item.url }}"
         class="block py-2 text-gray-700 hover:text-primary-600 transition-colors">
        {{ item.label }}
      </a>
      {% endfor %}
      <div class="border-t mt-2 pt-3">
        <div class="text-xs text-gray-500 mb-2 px-2">{{ translations[lang].switchLanguage or 'Language' }}</div>
        <a href="/it/{% if page.url contains 'scuola-volo' or page.url contains 'flight-school' or page.url contains 'segelflug' %}scuola-volo/{% elif page.url contains 'agriturismo' or page.url contains 'farm-stay' %}agriturismo/{% elif page.url contains 'galleria' or page.url contains 'gallery' or page.url contains 'galerie' %}galleria/{% elif page.url contains 'contatti' or page.url contains 'contact' or page.url contains 'kontakt' %}contatti/{% endif %}"
           class="flex items-center space-x-2 py-2 text-gray-700 hover:text-primary-600 transition-colors {% if lang == 'it' %}text-primary-600 font-semibold{% endif %}">
          <span class="text-lg">ðŸ‡®ðŸ‡¹</span>
