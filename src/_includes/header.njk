<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="container-custom py-4">
    <div class="flex items-center justify-between">
      <a href="/{{ lang }}/" class="flex items-center space-x-3">
        <div class="text-2xl font-serif font-bold text-primary-700">
          Gliding in Tuscany
        </div>
      </a>

      {# Desktop Menu #}
      <div class="hidden md:flex items-center space-x-8">
        {% for item in navigation[lang] %}
        <a href="{{ item.url }}"
           class="text-gray-700 hover:text-primary-600 transition-colors font-medium
                  {% if page.url == item.url %}text-primary-600 border-b-2 border-primary-600{% endif %}">
          {{ item.label }}
        </a>
        {% endfor %}

        {# Language Switcher #}
        <a href="/{% if lang == 'it' %}en{% else %}it{% endif %}/"
           class="text-sm text-gray-600 hover:text-primary-600 transition-colors border-l pl-6">
          {% if lang == 'it' %}EN{% else %}IT{% endif %}
        </a>
      </div>

      {# Mobile Menu Button #}
      <button id="mobile-menu-btn" class="md:hidden p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    {# Mobile Menu #}
    <div id="mobile-menu" class="hidden md:hidden pt-4 pb-2">
      {% for item in navigation[lang] %}
      <a href="{{ item.url }}"
         class="block py-2 text-gray-700 hover:text-primary-600 transition-colors">
        {{ item.label }}
      </a>
      {% endfor %}
      <a href="/{% if lang == 'it' %}en{% else %}it{% endif %}/"
         class="block py-2 text-gray-600 hover:text-primary-600 transition-colors border-t mt-2 pt-3">
        {% if lang == 'it' %}English{% else %}Italiano{% endif %}
      </a>
    </div>
  </nav>
</header>

<script>
  document.getElementById('mobile-menu-btn').addEventListener('click', function() {
    const menu = document.getElementById('mobile-menu');
    menu.classList.toggle('hidden');
  });
</script>
