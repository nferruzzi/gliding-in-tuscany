<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="container-custom py-4">
    <div class="flex items-center justify-between">
      <a href="/{{ lang }}/" class="flex items-center space-x-3">
        <div class="text-2xl font-serif font-bold text-primary-700">
          Gliding in Tuscany
        </div>
      </a>

      {# Desktop Menu #}
      <div class="hidden md:flex items-center space-x-8">
        {% for item in navigation[lang] %}
        <a href="{{ item.url }}"
           class="text-gray-700 hover:text-primary-600 transition-colors font-medium
                  {% if page.url == item.url %}text-primary-600 border-b-2 border-primary-600{% endif %}">
          {{ item.label }}
        </a>
        {% endfor %}

        {# Language Switcher with Flags #}
        {% set pagePath = "" %}
        {% if 'scuola-volo' in page.url or 'flight-school' in page.url or 'segelflug' in page.url %}
          {% set pagePath = "flight" %}
        {% elif 'agriturismo' in page.url or 'farm-stay' in page.url %}
          {% set pagePath = "farm" %}
        {% elif 'galleria' in page.url or 'gallery' in page.url or 'galerie' in page.url %}
          {% set pagePath = "gallery" %}
        {% elif 'contatti' in page.url or 'contact' in page.url or 'kontakt' in page.url %}
          {% set pagePath = "contact" %}
        {% endif %}
        <div class="relative border-l pl-6 group">
          <button class="flex items-center space-x-2 text-gray-600 hover:text-primary-600 transition-colors">
            <span class="text-xl">
              {% if lang == 'it' %}ğŸ‡®ğŸ‡¹{% elif lang == 'en' %}ğŸ‡¬ğŸ‡§{% elif lang == 'de' %}ğŸ‡©ğŸ‡ª{% endif %}
            </span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div class="hidden group-hover:block absolute right-0 mt-2 py-2 w-32 bg-white rounded-lg shadow-xl border border-gray-200 z-50">
            <a href="/it/{% if pagePath == 'flight' %}scuola-volo/{% elif pagePath == 'farm' %}agriturismo/{% elif pagePath == 'gallery' %}galleria/{% elif pagePath == 'contact' %}contatti/{% endif %}"
               class="flex items-center space-x-2 px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 transition-colors {% if lang == 'it' %}bg-primary-50 text-primary-600{% endif %}">
              <span class="text-lg">ğŸ‡®ğŸ‡¹</span>
              <span>Italiano</span>
            </a>
            <a href="/en/{% if pagePath == 'flight' %}flight-school/{% elif pagePath == 'farm' %}farm-stay/{% elif pagePath == 'gallery' %}gallery/{% elif pagePath == 'contact' %}contact/{% endif %}"
               class="flex items-center space-x-2 px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 transition-colors {% if lang == 'en' %}bg-primary-50 text-primary-600{% endif %}">
              <span class="text-lg">ğŸ‡¬ğŸ‡§</span>
              <span>English</span>
            </a>
            <a href="/de/{% if pagePath == 'flight' %}segelflug/{% elif pagePath == 'farm' %}agriturismo/{% elif pagePath == 'gallery' %}galerie/{% elif pagePath == 'contact' %}kontakt/{% endif %}"
               class="flex items-center space-x-2 px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 transition-colors {% if lang == 'de' %}bg-primary-50 text-primary-600{% endif %}">
              <span class="text-lg">ğŸ‡©ğŸ‡ª</span>
              <span>Deutsch</span>
            </a>
          </div>
        </div>
      </div>

      {# Mobile Menu Button #}
      <button id="mobile-menu-btn" class="md:hidden p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    {# Mobile Menu #}
    <div id="mobile-menu" class="hidden md:hidden pt-4 pb-2">
      {% for item in navigation[lang] %}
      <a href="{{ item.url }}"
         class="block py-2 text-gray-700 hover:text-primary-600 transition-colors">
        {{ item.label }}
      </a>
      {% endfor %}
      <div class="border-t mt-2 pt-3">
        <div class="text-xs text-gray-500 mb-2 px-2">Language</div>
        <a href="/it/{% if pagePath == 'flight' %}scuola-volo/{% elif pagePath == 'farm' %}agriturismo/{% elif pagePath == 'gallery' %}galleria/{% elif pagePath == 'contact' %}contatti/{% endif %}"
           class="flex items-center space-x-2 py-2 text-gray-700 hover:text-primary-600 transition-colors {% if lang == 'it' %}text-primary-600 font-semibold{% endif %}">
          <span class="text-lg">ğŸ‡®ğŸ‡¹</span>
          <span>Italiano</span>
        </a>
        <a href="/en/{% if pagePath == 'flight' %}flight-school/{% elif pagePath == 'farm' %}farm-stay/{% elif pagePath == 'gallery' %}gallery/{% elif pagePath == 'contact' %}contact/{% endif %}"
           class="flex items-center space-x-2 py-2 text-gray-700 hover:text-primary-600 transition-colors {% if lang == 'en' %}text-primary-600 font-semibold{% endif %}">
          <span class="text-lg">ğŸ‡¬ğŸ‡§</span>
          <span>English</span>
        </a>
        <a href="/de/{% if pagePath == 'flight' %}segelflug/{% elif pagePath == 'farm' %}agriturismo/{% elif pagePath == 'gallery' %}galerie/{% elif pagePath == 'contact' %}kontakt/{% endif %}"
           class="flex items-center space-x-2 py-2 text-gray-700 hover:text-primary-600 transition-colors {% if lang == 'de' %}text-primary-600 font-semibold{% endif %}">
          <span class="text-lg">ğŸ‡©ğŸ‡ª</span>
          <span>Deutsch</span>
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  document.getElementById('mobile-menu-btn').addEventListener('click', function() {
    const menu = document.getElementById('mobile-menu');
    menu.classList.toggle('hidden');
  });
</script>
