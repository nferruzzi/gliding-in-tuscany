<!DOCTYPE html>
<html lang="{{ lang }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="{{ description or site.description[lang] }}">
  <title>{{ title or site.title[lang] }}</title>

  {# Open Graph #}
  <meta property="og:title" content="{{ title or site.title[lang] }}">
  <meta property="og:description" content="{{ description or site.description[lang] }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">

  {# Favicon placeholder #}
  <link rel="icon" type="image/x-icon" href="/assets/favicon.ico">

  {# Fonts #}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

  {# Styles #}
  <link rel="stylesheet" href="/css/output.css">

  {# Alternate languages #}
  {% for language in site.languages %}
  <link rel="alternate" hreflang="{{ language }}" href="{{ site.url }}/{{ language }}{{ page.url | replace(lang, '') }}">
  {% endfor %}

</head>
<body class="flex flex-col min-h-screen relative">
  {% include "header.njk" %}

  <main class="flex-grow">
    {{ content | safe }}
  </main>

  {% include "footer.njk" %}

  {# Smooth scroll #}
  <script>
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });
  </script>
</body>
</html>
