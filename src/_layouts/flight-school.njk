<!DOCTYPE html>
<html lang="{{ lang }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="{{ description or site.description[lang] }}">
  <title>{{ title or site.title[lang] }}</title>

  {# Open Graph #}
  <meta property="og:title" content="{{ title or site.title[lang] }}">
  <meta property="og:description" content="{{ description or site.description[lang] }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">

  {# Favicon placeholder #}
  <link rel="icon" type="image/x-icon" href="/assets/favicon.ico">

  {# Fonts #}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

  {# Styles #}
  <link rel="stylesheet" href="/css/output.css">

  {# Alternate languages #}
  {% for language in site.languages %}
  <link rel="alternate" hreflang="{{ language }}" href="{{ site.url }}/{{ language }}{{ page.url | replace(lang, '') }}">
  {% endfor %}

  <style>
    /* Video background that scrolls with page */
    .video-background-container {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      overflow: hidden;
    }

    .video-background-container video {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    /* Overlay to darken video and improve text readability */
    .video-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(to bottom, rgba(12, 74, 110, 0.85), rgba(3, 105, 161, 0.75), rgba(2, 132, 199, 0.65));
      z-index: 1;
    }

    /* Ensure content is above video */
    body {
      position: relative;
    }

    main {
      position: relative;
      z-index: 2;
    }
  </style>
</head>
<body class="flex flex-col min-h-screen relative">
  {# Video background #}
  <div class="video-background-container">
    <video autoplay muted loop playsinline>
      <source src="/assets/videos/{{ videoFile }}" type="video/mp4">
    </video>
    <div class="video-overlay"></div>
  </div>

  {% include "header.njk" %}

  <main class="flex-grow">
    {{ content | safe }}
  </main>

  {% include "footer.njk" %}

  {# Smooth scroll #}
  <script>
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });
  </script>
</body>
</html>
